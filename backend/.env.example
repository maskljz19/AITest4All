# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_test_case_generator
REDIS_URL=redis://localhost:6379/0

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security: Encryption key for sensitive data (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
# ENCRYPTION_KEY=your_base64_encryption_key_here

# LLM API URLs (for custom endpoints or proxies)
OPENAI_API_BASE=https://api.openai.com/v1
ANTHROPIC_API_BASE=https://api.anthropic.com

# Default LLM Model Configuration
DEFAULT_MODEL_PROVIDER=openai
DEFAULT_MODEL_NAME=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000

# Agent-specific Model Configuration (optional, overrides default)
# REQUIREMENT_AGENT_MODEL=gpt-4
# SCENARIO_AGENT_MODEL=gpt-4
# CASE_AGENT_MODEL=gpt-4
# CODE_AGENT_MODEL=gpt-4
# QUALITY_AGENT_MODEL=gpt-4
# OPTIMIZE_AGENT_MODEL=gpt-4

# Application Settings
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4

# Session Settings
SESSION_EXPIRE_HOURS=24

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# Script Execution Settings
SCRIPT_TIMEOUT_SECONDS=30

# Knowledge Base Settings
KNOWLEDGE_BASE_DIR=./knowledge_base

# Agent Prompts Directory
AGENT_PROMPTS_DIR=./agent_prompts

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# CORS Configuration (comma-separated list of allowed origins)
# For development
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost
# For production, add your domain
# CORS_ORIGINS=http://localhost,https://your-domain.com,https://www.your-domain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost
